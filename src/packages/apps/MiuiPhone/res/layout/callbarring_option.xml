<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@miui:dimen/v5_preference_dialog_edittext_padding_top"
    android:paddingLeft="@miui:dimen/v5_preference_dialog_edittext_padding_side"
    android:paddingRight="@miui:dimen/v5_preference_dialog_edittext_padding_side"
    android:paddingTop="@miui:dimen/v5_preference_dialog_edittext_padding_top" >

    <TextView
        android:id="@+id/ViewTop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@+id/EditPassword" >
    </TextView>

    <EditText
        android:id="@+id/EditPassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:maxLength="4"
        android:password="true" >
    </EditText>

</LinearLayout>
