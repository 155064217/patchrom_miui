<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="mi_effect_control"
        android:summary="@string/dirac_switch_summary"
        android:title="@string/dirac_switch_title" />

    <PreferenceCategory
        android:key="mode_category" >
        <miui.preference.RadioButtonPreference
            android:key="mode_earbuds"
            android:persistent="false"
            android:title="@string/dirac_mode_earbuds" />
        <miui.preference.RadioButtonPreference
            android:key="mode_in_ear"
            android:persistent="false"
            android:title="@string/dirac_mode_in_ear" />
        <miui.preference.RadioButtonPreference
            android:key="mode_piston_100"
            android:persistent="false"
            android:title="@string/dirac_mode_piston_100" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="equalizer_category">
        <Preference
            android:title="@string/equalizer"
            >
            <intent android:action="com.android.settings.DIRAC_EQUALIZER"
                android:targetPackage="com.android.settings"
                android:targetClass="com.android.settings.dirac.DiracEqualizer" />
        </Preference>
    </PreferenceCategory>
</PreferenceScreen>